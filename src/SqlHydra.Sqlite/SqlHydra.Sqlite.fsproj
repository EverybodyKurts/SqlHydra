<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp3.1;net5.0</TargetFrameworks>
    <Version>0.40.0</Version>
    <Authors>Jordan Marr</Authors>
    <Description>SqlHydra.Sqlite is a dotnet tool that generates F# records for a SQL Server database.</Description>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>sqlhydra-sqlite</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="build\SqlHydra.Sqlite.props">
      <PackagePath>%(Identity)</PackagePath>
      <Visible>true</Visible>
      <Pack>true</Pack>
    </Content>
    <None Include="build\SqlHydra.Sqlite.InTest.props" />
    <Compile Include="..\SqlHydra\Schema.fs" Link="Schema.fs" />
    <Compile Include="..\SqlHydra\SchemaGenerator.fs" Link="SchemaGenerator.fs" />
    <Compile Include="SqliteDataTypes.fs" />
    <Compile Include="SqliteSchemaProvider.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Fantomas" Version="4.4.0" />
    <PackageReference Include="FsAst" Version="0.9.0" />
    <PackageReference Include="System.Data.SQLite" Version="1.0.113.7" />
    <PackageReference Include="System.Text.Json" Version="5.0.2" />
  </ItemGroup>

</Project>
