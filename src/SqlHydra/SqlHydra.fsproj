<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Version>0.10.0</Version>
    <Authors>Jordan Marr</Authors>
    <Description>SqlHydra is a Myriad plugin that generates F# records from a SQL Server SSDT .dacpac file.</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/JordanMarr/SqlHydra</PackageProjectUrl>
    <PackageTags>fsharp F# sqlserver SSDT ORM</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <!--<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>-->
  </PropertyGroup>

  <ItemGroup>
      <Content Include="build\SqlHydra.props">
          <Pack>true</Pack>
          <PackagePath>%(Identity)</PackagePath>
          <Visible>true</Visible>
      </Content>
      <Content Include="build\SqlHydra.InTest.props">
          <Pack>true</Pack>
          <PackagePath>%(Identity)</PackagePath>
          <Visible>true</Visible>
      </Content>
    <Compile Include="DacpacParser.fs" />
    <Compile Include="SqlServerDataTypes.fs" />
    <Compile Include="SsdtGenerator.fs" />
    <Compile Include="Schema.fs" />
    <Compile Include="SqlServerGenerator.fs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Myriad.Core" Version="0.5.3" />
    <PackageReference Include="System.Text.Json" Version="5.0.2" />
  </ItemGroup>
    
    <ItemGroup>
      <PackageReference Update="FSharp.Core" Version="5.0.0" />
    </ItemGroup>

</Project>
